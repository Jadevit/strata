{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "strata",
  "version": "0.0.1",
  "identifier": "com.strata.app",

  "build": {
    "beforeDevCommand": "pnpm -C apps/desktop dev",
    "beforeBuildCommand": "pnpm -C apps/desktop build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "apps/desktop/dist"
},

  "app": {
    "windows": [
      {
        "title": "Strata",
        "width": 800,
        "height": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/**/*"]
  },

  "plugins": {}
}